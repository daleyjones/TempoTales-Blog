
{{#each blogPosts}}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{id}}">{{title}}</a>
    </h2>
    <p class="metadata">Published on {{format_date published_date}} by {{author}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{excerpt}}
    </p>
  </div>
</div>
{{/each}}
